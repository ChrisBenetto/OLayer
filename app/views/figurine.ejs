<%- include('partials/header')%>
<body>
    
    <%- include ('partials/navbar') %>
    <div id="figurine_container"class="columns">
    <% for (const figurine of figurines) { %>
        <div class="card column is-3">
            <div class="card-image">
              <figure class="image is-128x128">
                <img src="<%= figurine.figurine_pictures.picture_url %>" alt="Placeholder image">
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                  </figure>
                </div>
                <div class="media-content">
                  <p class="title is-4"><%= figurine.name %></p>
                  <p class="subtitle is-6"><%= figurine.user_figurines.name %></p> 

                </div>
              </div>
          
              <div class="content">
                <%= figurine.description %></a>
                <br>
                <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
                <div class="tags  has-addons">
                    <span class="tag">Cat√©gorie : </span>
                    <span class="tag is-primary"><%= figurine.figurine_category.content %></span>
                  </div>
              </div>
            </div>
            <footer class="card-footer">
                <a href="#" class="card-footer-item"><i class="fa fa-heart"></i><%= figurine.nb_upvote %></a>
                <a href="#" class="card-footer-item"><i class="fa fa-heart-broken"></i>  <%= figurine.nb_downvote %></a>
                <a href="#" class="card-footer-item"><i class="fa fa-comments"></i></a>
              </footer>
          </div>
    <%} %>
</div>  
    <script src="https://kit.fontawesome.com/22bc19bb3d.js" crossorigin="anonymous"></script>
</body>
</html>

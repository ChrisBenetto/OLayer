<%- include ('partials/header') %> 
<body>
    <% if (locals.errors) { console.log(locals.errors) %>
        <% for (const error of locals.errors) { %>
            <p><%= error.message %></p>
        <% }} %>
        <main id="main__signUpPage">
            <h1 id="title__signUpPage">S'inscrire</h1>
        <form action="/signup#submit" method="POST" class="column is-half">
            <div class="field">
                <p class="control">
                  <input class="input" id="name" name="name" type="text" placeholder="Votre pseudo">
                </p>
              </div>
              <div class="field">
                <p class="control">
                  <input class="input" id="email" name="email" type="email" placeholder="Votre email">
                </p>
              </div>
            <div class="field">
                <p class="control">
                  <input class="input" id="password" name="password" type="password" placeholder="Mot de passe">
                </p>
              </div>
              <div class="field">
                <p class="control">
                  <input class="input" id="passwordConfirm" name="passwordConfirm" type="password" placeholder="Confirmer le mot de passe">
                </p>
              </div>
              <div class="field">
                <p class="control">
                  <input type="submit" class="button is-success" value="S'inscrire">
                </p>
              </div>
        </form>
    </main>
    </form>
</body>
</html>